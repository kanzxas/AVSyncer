<Page x:Class="KanColleTool.DashBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
	Title="DashBoard">

    <Page.Resources>
        <DataTemplate x:Key="MissionTemplate">
            <StackPanel Orientation="Vertical" >
                <Label Content="{Binding Name}" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="{Binding FlagLvInfo}" Width="60" />
                    <Label Content="{Binding Require}" Width="100" />
                    <Label Content="{Binding Time}" Width="60" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
        <Style x:Key="BaseStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Height" Value="28" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style x:Key="MissionStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Height" Value="28" />
            <Setter Property="Width" Value="235" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </Page.Resources>

    <Grid>
        <ComboBox Name="cbxFl1Mission" Margin="12,0,0,0" Style="{StaticResource MissionStyle}" ItemTemplate="{StaticResource MissionTemplate}" KeyDown="cbxMission_KeyDown" />
        <Label Name="labFl1MissionETA" Margin="424,0,0,0" Content="" Style="{StaticResource BaseStyle}" />
        <Label Name="labFl1MissionCD" Margin="334,0,0,0" Content="" Style="{StaticResource BaseStyle}" />
        <Button Name="btnFl1Result" Margin="253,0,0,0" Uid="0" Content="補給&amp;遠征" Width="75" Click="btnFleet_Click" Style="{StaticResource BaseStyle}" />

        <ComboBox Name="cbxFl2Mission" Margin="12,34,0,0" Style="{StaticResource MissionStyle}" ItemTemplate="{StaticResource MissionTemplate}" KeyDown="cbxMission_KeyDown" />
        <Label Name="labFl2MissionETA" Margin="424,34,0,0" Content="" Style="{StaticResource BaseStyle}" />
        <Label Name="labFl2MissionCD" Margin="334,34,0,0" Content="" Style="{StaticResource BaseStyle}" />
        <Button Name="btnFl2Result" Margin="253,34,0,0" Uid="1" Content="補給&amp;遠征" Width="75" Click="btnFleet_Click" Style="{StaticResource BaseStyle}" />

        <ComboBox Name="cbxFl3Mission" Margin="12,68,0,0" Style="{StaticResource MissionStyle}" ItemTemplate="{StaticResource MissionTemplate}" KeyDown="cbxMission_KeyDown" />
        <Label Name="labFl3MissionETA" Margin="424,68,0,0" Content="" Style="{StaticResource BaseStyle}" />
        <Label Name="labFl3MissionCD" Margin="334,68,0,0" Content="" Style="{StaticResource BaseStyle}" />
        <Button Name="btnFl3Result" Margin="253,68,0,0" Uid="2" Content="補給&amp;遠征" Width="75" Click="btnFleet_Click" Style="{StaticResource BaseStyle}" />

        <ComboBox Name="cbxFl4Mission" Margin="12,102,0,0" Style="{StaticResource MissionStyle}" ItemTemplate="{StaticResource MissionTemplate}" KeyDown="cbxMission_KeyDown" />
        <Label Name="labFl4MissionETA" Margin="424,102,0,0" Content="" Style="{StaticResource BaseStyle}" />
        <Label Name="labFl4MissionCD" Margin="334,102,0,0" Content="" Style="{StaticResource BaseStyle}" />
        <Button Name="btnFl4Result" Margin="253,102,0,0" Uid="3" Content="補給&amp;遠征" Width="75" Click="btnFleet_Click" Style="{StaticResource BaseStyle}" />

        <Label Name="labShipCount" Margin="12,136,0,0" Content="" Style="{StaticResource BaseStyle}" />
        <Label Name="labItemCount" Margin="12,170,0,0" Content="" Style="{StaticResource BaseStyle}" />
    </Grid>
</Page>
