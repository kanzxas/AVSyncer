                <DataGridTextColumn Header="cnum" Binding="{Binding Path=api_cnum.Value}" />
                <DataGridTextColumn Header="ctype" Binding="{Binding Path=api_ctype.Value}" />
                <DataGridTextColumn Header="defeq">
